@model Todo.Web.ViewModels.TodoListItemViewModel

@{
    ViewBag.Title = $"Viewing Item: {Model.Name}";
}

<h2>Viewing @Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AddedOn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddedOn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompletedOn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompletedOn)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "View", "List", new { id = Model.ListId }, null)
</p>
